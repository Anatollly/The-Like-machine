{
    "manifest_version": 2,

    "name": "Like machine free",
    "description": "Extension that will make you popular in the Instagram",
    "default_locale": "ru",
    "version": "1.0.3",
    "icons": {
            "16": "images/LM16.png",
            "32": "images/LM32.png",
            "48": "images/LM48.png",
            "64": "images/LM64.png",
            "128": "images/LM128.png"
    },
    "background": {
      "scripts": ["background/background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://www.instagram.com/*","http://www.instagram.com/*"],
            "js": ["content_scripts/content.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
      "activeTab",
      "storage",
      "webRequest",
      "*://www.instagram.com/*",
      "webRequestBlocking",
      "background",
      "tabs",
      "webNavigation"
    ],
    "browser_action": {
          "default_title": "Like-machine",
          "default_popup": "popup/popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval' https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js; object-src 'self'"
}
